# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Atlas Configuration
# MONGODB_URI=insert your

# JWT Configuration
# JWT_SECRET=insert your
# JWT_EXPIRES_IN=insert your
# JWT_REFRESH_EXPIRES_IN=insert your

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Cloudinary Configuration (for file uploads)
# CLOUDINARY_CLOUD_NAME=insert your
# CLOUDINARY_API_KEY=insert your
# CLOUDINARY_API_SECRET=insert your

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Security
BCRYPT_ROUNDS=12
